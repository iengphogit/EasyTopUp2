<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/list_item_detail_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/list_item_detail_cardinal_number"
            android:text="00"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/list_item_detail_title"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="8dp"
            android:layout_margin="2dp"
            android:text="Check external balance *888#"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/list_item_detail_send_btn"
            android:padding="8dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_send_white_24dp"
            android:background="@android:color/holo_orange_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/list_item_detail_call_btn"
            android:padding="8dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_call_white_24dp"
            android:background="@android:color/holo_red_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>